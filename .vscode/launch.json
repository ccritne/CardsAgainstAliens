{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SFML Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/aliens",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/lib/SFML/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Full Project"
        }
    ]
}
